<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Lebara Mobile</title>
    <link href="https://www.lebara.sa/wp-content/cache/minify/a7063.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <script src="~/Scripts/modernizr-2.8.3.js"></script>
    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <script src="~/Scripts/qrcode.js"></script>
    <style>
        .main-menu .dropdown-menu {
            width: 500px;
        }

        .main-mobile-menu .dropdown-menu {
            width: 500px;
        }

        .lebaraFeaturesMain {
            padding-top: 50px;
        }

        .navbar.yamm.culture-picker .row.culture-picker-wrap {
            width: 149px;
        }

        .navbar.yamm.culture-picker .dropdown-menu {
            left: 15px;
        }

        button.buyBtn {
            display: block;
            text-align: center;
            margin-left: auto;
            margin-right: auto;
            background-color: #00a4eb;
            border: none;
            color: #fff;
            border-radius: 5px;
            padding: 10px;
            width: 100%;
            font-weight: 900;
        }

        button.buyBtn-ar {
            width: calc( 100% - 20px);
            margin-right: 13px;
        }

        a.recharge-now, a.order-sim {
            display: inline-block;
            text-align: center;
            margin-left: auto;
            margin-right: auto;
            background-color: #fff;
            color: #878787;
            border-radius: 5px;
            padding: 10px;
            width: 49%;
            font-weight: 900;
            margin: 10px auto;
            border: 2px solid #878787;
        }

        a.recharge-now-ar, a.order-sim-ar {
            width: 45%;
            margin-right: 6px;
        }

        a.recharge-now:hover, a.recharge-now:focus, a.order-sim:hover, a.order-sim:focus {
            text-decoration: none;
        }

        p.validity-days {
            float: right;
            font-weight: 900;
            color: #878787;
        }

        p.validity-days-ar {
            float: left;
        }

        .tooltip-inner {
            border: 2px solid #00a4eb;
            color: #00a4eb;
            padding: 10px;
            font-weight: 600;
            background: #fff;
            font-size: 14px;
        }

            .tooltip-inner:before {
                content: 'Dial';
                position: relative;
                color: #666;
            }

        .tooltip.top .tooltip-arrow {
            border-top-color: #00a4eb;
        }

        .fixed-navbar {
            padding-top: 137px;
        }

        .btnRechargeTopM {
            width: 100px;
            height: 35px !important;
            margin-left: 35px;
            font-size: 15px;
            font-weight: bold;
            float: right;
            padding: 4px 10px;
            margin-top: 8px !important;
            color: #fff;
            border-color: #eb0e70;
            background: #eb0e70;
        }

            .btnRechargeTopM:hover {
                color: #fff;
                border-color: #00a6eb;
                background: #00a6eb;
            }

        .btnRD {
            color: #fff;
            border-color: #eb0e70;
            background: #eb0e70;
        }

            .btnRD:hover {
                color: #fff;
                border-color: #00a6eb;
                background: #00a6eb;
            }

        .navbar-toggle {
            border: 1px solid #00a6eb;
            margin-right: 0px;
        }

        .complaintPage {
            padding-left: 0px;
            background-image: url(https://www.lebara.sa/wp-content/uploads/2019/02/Complaint-Banner765x250.jpg);
            width: 765px;
        }

        .lebcontainer {
            display: flex;
            flex-direction: column;
            align-items: center;
        }

        .lebprodcut {
            display: flex;
            background-color: aqua;
            flex-direction: column;
        }

        .panel-title {
            display: inline;
            font-weight: bold;
        }

        .checkbox.pull-right {
            margin: 0;
        }

        .pl-ziro {
            padding-left: 0px;
        }
    </style>
</head>
<body>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Lebara KSA</p>
        </footer>
    </div>

    <script src="~/Scripts/jquery-3.3.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>